
	<%= simple_form_for @hotel,  html: { multipart: true } do |f| %>
    	<% render 'shared/error_messages_hotel' %>
		
		<%= f.input :title, label: 'Name hotel' %>
		<%= f.input :stars_rating, collection: 1..5 %>

	
		<%= f.input :breakfast_included?, collection: ['Yes', 'No']%>

	
		<%= f.input :room_description, as: :text %>

		<%= f.label 'Add a photo of a hotel'%>
		
		<%= f.input :photo, as: :file %>
		<%= f.input :photo_cache, as: :hidden %>


		<%= f.input :price_for_room, as: :integer, promt: "should be in $" %>
		<%= f.input :country, as: :country %>
		
		
    	<%= f.button :submit, "Add new hotel", class: "btn btn-large btn-primary" %>
    <% end %>
	


