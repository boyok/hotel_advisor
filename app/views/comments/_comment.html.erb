<h1> Comments </h1>
<% if @hotel.comments.any? %>
    <% @hotel.comments.each do |comment| %>
	    <section>
    	    <% unless comment.text_comment.empty? %>
        	    <li> <h4><%= "#{comment.user.name}:    #{comment.text_comment}" %></h4></li>
        	<% end %>
        </section>
    <% end %>
<% else %>
	<h2> No comments </h2>
<% end %>